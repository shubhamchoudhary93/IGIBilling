<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/item_name_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Name" />

        <EditText
            android:id="@+id/quantity_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/rate_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/percentage_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Percentage"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/calculated_rate_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calculated Rate"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/calculated_total_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calculated Total"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/add_sale_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add item" />

    </LinearLayout>
</layout>